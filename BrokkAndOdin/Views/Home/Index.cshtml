@model BrokkAndOdin.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

@section scripts{
    @Scripts.Render("~/bundles/gallery")
    <script id="img-wrapper-tmpl" type="text/x-jquery-tmpl">
        <div class="rg-image-wrapper">
            {{if itemsCount > 1}}
            <div class="rg-image-nav">
                <a href="#" class="rg-image-nav-prev">Previous Image</a>
                <a href="#" class="rg-image-nav-next">Next Image</a>
            </div>
            {{/if}}
            <div class="rg-caption-wrapper">
                <div class="rg-caption" style="display:none;">
                    <p></p>
                </div>
            </div>
            <div class="rg-image"></div>
            <div class="rg-loading"></div>
        </div>
    </script>
}

@section styles{
    @Styles.Render("~/Content/gallery")
}
@using (Html.BeginForm("index", "home"))
{
    <nav class="row">
        <div class="input-group col-md-3 col-sm-6 col-xs-9 col-md-offset-8 col-sm-offset-4 search-box">
            @Html.TextBoxFor(m => m.SearchString, null, new { @class = "form-control", placeholder = "search" })
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
        <div class="col-md-1 col-sm-2 col-xs-3 rg-view">
            <a href="#" class="rg-view-thumbs rg-view-selected"></a>
            <a href="#" class="rg-view-full"></a>
        </div>
    </nav>
}

<div id="rg-gallery" class="rg-gallery row">
    <div class="rg-thumbs">
        <!-- Elastislide Carousel Thumbnail Viewer -->
        <div class="es-carousel-wrapper rounded-bottom">
            <div class="es-nav">
                <span class="es-nav-prev">Previous</span>
                <span class="es-nav-next">Next</span>
            </div>
            <div class="es-carousel">
                <ul>
                    @foreach (var photo in Model.Photos)
                    {
                        <li>
                            <a href="#">
                                <img src="@photo.ThumbnailUrl" data-large="@photo.FullUrl" alt="@photo.Title" data-description="@photo.Title" />
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

